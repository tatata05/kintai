<% provide(:title, "employee_show") %>
<div class="top">
  <h2>マイページ</h2>
  <% if @employee.blank? %>
    <p>該当するアカウントは存在しません</p>
  <% else %>
    <div>
      <p>[従業員名]<br><%= @employee.name %></p>
      <p>[メールアドレス]<br><%= @employee.email %></p>
      <p>[性別]<br><%= @employee.gender %></p>
      <p>[年齢]<br><%= @employee.age %></p>
      <p>[住所]<br><%= @employee.address %></p>
      <p>[電話番号]<br><%= @employee.phone_number %></p>
      <p>[緊急連絡先]<br><%= @employee.emergency_phone_number %></p>
    </div>
    <% if current_employee == @employee %>
      <%= link_to "編集", edit_employee_registration_path, class: "btn btn-primary" %>
    <% elsif admin_signed_in? %>
      <%= link_to "取消", @employee, method: :delete, data: {confirm: "本当に削除してよろしいですか？"}, class: "btn btn-primary" %>
    <% end %>
  <% end %>
</div>
