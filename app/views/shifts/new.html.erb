<% provide(:title, "shift_apply") %>
<div class="top">
  <h1>シフト申請</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @shift, local: true) do |f| %>
      <%= f.label :date, "日付" %>
      <%= f.date_field :date %>
      <%= f.label :starting_time, "開始時間" %>
      <%= f.text_field :starting_time %>
      <%= f.label :ending_time, "終了時間" %>
      <%= f.text_field :ending_time %>
      <%= f.submit "シフトを申請する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>