<% provide(:title, "shift_show") %>
<div class="top">
  <h2>シフト詳細</h2>
  <% if @shift.blank? %>
    <p>該当するシフトは存在しません</p>
  <% else %>
    <%= render "shared/shift", shift: @shift %>
    <% if admin_signed_in? %>
      <% if @shift.status == "unapproved" # TODO:status変更時に通知作成 %>
        <%= link_to "承認", admin_shift_path(shift: {status: "approved"}), method: :put, class: "btn btn-primary" %>
        <%= link_to "却下", admin_shift_path(shift: {status: "rejected"}), method: :put, data: {confirm: "欠勤申請を却下してよろしいですか？"}, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "未承認に戻す", admin_shift_path(shift: {status: "unapproved"}), method: :put, class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% end %>
</div>
