<% provide(:title, "管理者一覧") %>
<h2 class="title">管理者一覧</h2>
<div class="text-center">
  <div class="container row">
    <div class="col-10 mx-auto d-flex justify-content-center align-items-center">
      <div class="col-5">
        <%= form_with(url: admin_admins_path, method: :get, local: true) do |f| %>
          <%= f.text_field :search, placeholder: "管理者名で検索" %>
          <%= f.submit '検索', class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <table class="table text-center home_margin">
    <thead>
      <tr>
        <th>管理者名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= link_to admin.name, admin_admin_path(admin.id) %></td>
          <td><%= admin.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @admins %>
</div>
