<% provide(:title, "従業員一覧") %>
<h2 class="title">従業員一覧</h2>
<div class="text-center">
  <div class="container row">
    <div class="col-10 mx-auto d-flex justify-content-center align-items-center">
      <div class="col-5">
        <%= form_with(url: admin_employees_path, method: :get, local: true) do |f| %>
          <%= f.text_field :search, placeholder: "従業員名で検索" %>
          <%= f.submit '検索', class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <table class="table text-center home_margin">
    <thead>
      <tr>
        <th>従業員名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.name, admin_employee_path(id: employee.id) %></td>
          <td><%= employee.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @employees %>
</div>
